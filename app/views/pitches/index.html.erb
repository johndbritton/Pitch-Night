<h1>Listing pitches</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Title</th>
    <th>Problem</th>
    <th>Solution</th>
    <th>Goal</th>
    <th>Need</th>
    <th>Soft name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pitches.each do |pitch| %>
  <tr>
    <td><%= pitch.number %></td>
    <td><%= pitch.title %></td>
    <td><%= pitch.problem %></td>
    <td><%= pitch.solution %></td>
    <td><%= pitch.goal %></td>
    <td><%= pitch.need %></td>
    <td><%= pitch.soft_name %></td>
    <td><%= link_to 'Show', pitch %></td>
    <td><%= link_to 'Edit', edit_pitch_path(pitch) %></td>
    <td><%= link_to 'Destroy', pitch, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

